[bar/i3wmthemer_bar]
width = 100%
height = 19
fixed-center = true
bottom = false

background = ${color.background-alpha}
foreground = ${color.foreground}

line-size = 3
padding-left = 0
padding-right = 1
module-margin-left = 1
module-margin-right = 1

font-0 = "Misc Termsyn:size=8.5;2"
font-1 = "Siji:size=8.5;2"
font-2 = "xos4 Terminus:size=8.5;2"

modules-left = i3
modules-center = cmus
modules-right = mem_i mem audio_i audio battery_i battery network vpn bluetooth date

tray-background = ${self.background}
tray-transparent = true
override-redirect = false

cursor-click = pointer
cursor-scroll = ns-resize

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

label-focused = %index%
label-focused-foreground = ${color.white}
label-focused-padding = 4

label-unfocused = %index%
label-unfocused-foreground = ${color.foreground}
label-unfocused-padding = 4

label-urgent = %index%
label-urgent-foreground = ${color.red}
label-urgent-padding = 4

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/date]
type = internal/date
label = %date% %time%
interval = 5
date = "%a %d"
time = "%H:%M   "

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/mem]
type = internal/memory
interval = 3
format = <label>
format-padding = 1
label = "%gb_used%"

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/mem_i]
type = internal/memory
interval = 3
